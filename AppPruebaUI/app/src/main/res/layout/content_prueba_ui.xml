<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.PruebaUI.PruebaUIActivity"
    tools:showIn="@layout/activity_prueba_ui"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <Button
            android:id="@+id/buttonHola"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hola"
            android:onClick="ponerTexto"/>

        <TextView
            android:id="@+id/saludo"
            android:layout_width="237dp"
            android:layout_height="20dp"
            android:text="Texto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonAmarillo"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:text="Amarillo"/>

        <Button
            android:id="@+id/buttonVerde"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:text="Verde"/>


    </LinearLayout>

    <TextView
        android:id="@+id/textview2"
        android:text=""
        android:background="#aa0000"
        android:layout_width="match_parent"
        android:layout_height="354dp" />


</LinearLayout>
